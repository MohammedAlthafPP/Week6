

{{!-- ======================================= Table =================================== --}}

<section class="Product_Table" style="">
    <div class="container">
        <div class="">
        <a href="/admin/add-product" class="btn btn-success mb-4 mt-4 ml-auto">Add Products</a>
        </div>
            <table class="table table-hover table-light table-bordered" id="use-table">
        
        <thead class="text-center">
            <tr>
                <th scope="col">Fist Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Date of Birth</th>
                <th scope="col">Gender</th>
                <th scope="col">Email</th>
                <th scope="col">Contact</th>
              
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>

                <th scope="row">{{this.fname}}</th>
                <td>{{this.Lname}}</td>
                <td>{{this.DOB}}</td>
                <td>{{this.inlineRadioOptions}}</td>
                <td>{{this.fEmail}}</td>
                <td>{{this.fpnum}}</td>
                
           <td>   <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                    <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to Remove {{this.fname}}?');")>Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
        </table>
    </div>
</section>




<script>
    $(document).ready( function () {
    $('#use-table').DataTable();
} );
</script>





